@model Finance_Literacy_App_Web.Models.Lesson

<h1>Delete Lesson</h1>
<h3>Are you sure you want to delete this lesson?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>
        <dt class="col-sm-2">Module</dt>
        <dd class="col-sm-10">@Model.Module?.Title</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ManageModules" asp-controller="Admin" class="btn btn-secondary">Cancel</a>
    </form>
</div>