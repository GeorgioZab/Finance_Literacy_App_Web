@model Finance_Literacy_App_Web.Models.Lesson

<h1>Удалить урок</h1>
<h3>Вы уверены, что хотите удалить этот урок?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Содержание</dt>
        <dd class="col-sm-10">@Model.Content</dd>
        <dt class="col-sm-2">Ссылка на YouTube-видео</dt>
        <dd class="col-sm-10">@Model.YouTubeVideoUrl</dd>
        <dt class="col-sm-2">Модуль</dt>
        <dd class="col-sm-10">@Model.Module?.Title</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="ManageModules" asp-controller="Admin" class="btn btn-secondary">Отмена</a>
    </form>
</div>