@model Finance_Literacy_App_Web.Models.Lesson

<h1>Создать новый урок</h1>
<form asp-action="Create" method="post">
    <input type="hidden" asp-for="ModuleId" />
    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label">Название</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Content" class="form-label">Содержание</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="YouTubeVideoUrl" class="form-label">Ссылка на YouTube-видео</label>
        <input asp-for="YouTubeVideoUrl" class="form-control" placeholder="Например: https://www.youtube.com/watch?v=abc123" />
        <span asp-validation-for="YouTubeVideoUrl" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ModuleId" class="form-label">Модуль</label>
        <select asp-for="ModuleId" class="form-control" asp-items="ViewBag.ModuleId" disabled></select>
        <span asp-validation-for="ModuleId" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Создать</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Назад</a>
</form>