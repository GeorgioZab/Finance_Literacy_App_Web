@model List<(int TaskId, string Question, string UserAnswer, string CorrectAnswer, bool IsCorrect)>

@{
    ViewData["Title"] = "Результаты ответов";
    var lesson = ViewBag.Lesson as Finance_Literacy_App_Web.Models.Lesson;
}

<h1>Результаты ответов для @lesson.Title</h1>
<p>Модуль: @lesson.Module.Title</p>

@if (Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Вопрос</th>
                <th>Ваш ответ</th>
                <th>Правильный ответ</th>
                <th>Результат</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr>
                    <td>@result.Question</td>
                    <td>@result.UserAnswer</td>
                    <td>@result.CorrectAnswer</td>
                    <td>
                        @if (result.IsCorrect)
                        {
                            <span class="badge bg-success">Правильно</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Неправильно</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Для этого урока не было отправлено ни одного ответа.</p>
}

<a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Вернуться на главную</a>