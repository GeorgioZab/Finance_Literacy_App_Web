@model Finance_Literacy_App_Web.Models.Task

<h1>Редактировать задание</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="LessonId" />
    <div class="form-group mb-3">
        <label asp-for="Question" class="form-label">Вопрос</label>
        <input asp-for="Question" class="form-control" />
        <span asp-validation-for="Question" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="CorrectAnswer" class="form-label">Правильный ответ</label>
        <input asp-for="CorrectAnswer" class="form-control" />
        <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="LessonId" class="form-label">Урок</label>
        <select asp-for="LessonId" class="form-control" asp-items="ViewBag.LessonId" disabled></select>
        <span asp-validation-for="LessonId" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Назад</a>
</form>