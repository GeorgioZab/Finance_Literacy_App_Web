@model Finance_Literacy_App_Web.Models.Task

<h1>Delete Task</h1>
<h3>Are you sure you want to delete this task?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Question</dt>
        <dd class="col-sm-10">@Model.Question</dd>
        <dt class="col-sm-2">Correct Answer</dt>
        <dd class="col-sm-10">@Model.CorrectAnswer</dd>
        <dt class="col-sm-2">Lesson</dt>
        <dd class="col-sm-10">@Model.Lesson?.Title</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
    </form>
</div>