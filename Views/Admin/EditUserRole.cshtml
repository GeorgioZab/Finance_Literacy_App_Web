@model Finance_Literacy_App_Web.Models.User

@{
    ViewData["Title"] = "Изменить роль пользователя";
}

<h1>Изменить роль для @Model.UserName</h1>

<form asp-action="EditUserRole" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-3">
        <label for="role" class="form-label">Роль</label>
        <select name="role" class="form-control" required>
            @foreach (var role in ViewData["Roles"] as List<string>)
            {
                <option value="@role" selected="@(role == Model.Role)">@role</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="ManageUser" class="btn btn-secondary">Отмена</a>
</form>