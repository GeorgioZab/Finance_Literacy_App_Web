@model IEnumerable<Finance_Literacy_App_Web.Models.User>

@{
    ViewData["Title"] = "Manage User";
}

<h1>Manage User</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="EditUserRole" asp-route-id="@user.Id" class="btn btn-primary">Edit Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>