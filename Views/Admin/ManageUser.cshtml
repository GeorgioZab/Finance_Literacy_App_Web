@model IEnumerable<Finance_Literacy_App_Web.Models.User>

@{
    ViewData["Title"] = "Управление пользователями";
}

<h1>Управление пользователями</h1>

<table class="table">
    <thead>
        <tr>
            <th>Имя пользователя</th>
            <th>Электронная почта</th>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="EditUserRole" asp-route-id="@user.Id" class="btn btn-primary">Изменить роль</a>
                </td>
            </tr>
        }
    </tbody>
</table>