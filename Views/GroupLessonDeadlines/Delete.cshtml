@model Finance_Literacy_App_Web.Models.GroupLessonDeadline

@{
    ViewData["Title"] = "Удалить срок выполнения урока для группы";
}

<h1>Удалить срок выполнения урока для группы</h1>
<h3>Вы уверены, что хотите удалить этот срок выполнения?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Группа</dt>
        <dd class="col-sm-10">@Model.Group?.Name</dd>
        <dt class="col-sm-2">Урок</dt>
        <dd class="col-sm-10">@Model.Lesson?.Title</dd>
        <dt class="col-sm-2">Срок выполнения</dt>
        <dd class="col-sm-10">@Model.Deadline.ToString("g")</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="GroupId" />
        <input type="hidden" asp-for="LessonId" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" asp-controller="GroupLessonDeadlines" class="btn btn-secondary">Отмена</a>
    </form>
</div>