@model Finance_Literacy_App_Web.Models.GroupLessonDeadline

@{
    ViewData["Title"] = "Delete Group Lesson Deadline";
}

<h1>Delete Group Lesson Deadline</h1>
<h3>Are you sure you want to delete this deadline?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Group</dt>
        <dd class="col-sm-10">@Model.Group?.Name</dd>
        <dt class="col-sm-2">Lesson</dt>
        <dd class="col-sm-10">@Model.Lesson?.Title</dd>
        <dt class="col-sm-2">Deadline</dt>
        <dd class="col-sm-10">@Model.Deadline.ToString("g")</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="GroupId" />
        <input type="hidden" asp-for="LessonId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-controller="GroupLessonDeadlines" class="btn btn-secondary">Cancel</a>
    </form>
</div>