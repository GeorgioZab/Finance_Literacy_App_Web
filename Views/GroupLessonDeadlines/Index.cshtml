@model List<Finance_Literacy_App_Web.Models.GroupLessonDeadline>

@{
    ViewData["Title"] = "Group Lesson Deadlines";
}

<h1>Group Lesson Deadlines</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<a asp-action="Create" asp-controller="GroupLessonDeadlines" class="btn btn-primary mb-3">Create New Deadline</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Group</th>
            <th>Lesson</th>
            <th>Deadline</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Group?.Name</td>
                <td>@item.Lesson?.Title</td>
                <td>@item.Deadline.ToString("g")</td>
                <td>
                    <span style="display:none;">Debug: GroupId = @item.GroupId, LessonId = @item.LessonId</span>
                    <a asp-action="Edit" asp-controller="GroupLessonDeadlines" asp-route-groupId="@item.GroupId" asp-route-lessonId="@item.LessonId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-controller="GroupLessonDeadlines" asp-route-groupId="@item.GroupId" asp-route-lessonId="@item.LessonId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Groups" asp-controller="Teacher" class="btn btn-secondary">Back to Groups</a>