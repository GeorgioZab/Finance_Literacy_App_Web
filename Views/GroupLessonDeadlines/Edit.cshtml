@model Finance_Literacy_App_Web.Models.GroupLessonDeadline

@{
    ViewData["Title"] = "Edit Group Lesson Deadline";
}

<h1>Edit Group Lesson Deadline</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="GroupId" />
    <input type="hidden" asp-for="LessonId" />
    <div class="form-group mb-3">
        <label asp-for="GroupId" class="form-label">Group</label>
        <select asp-items="ViewBag.Groups" asp-for="GroupId" class="form-control" disabled>
            <option value="">Select a group</option>
        </select>
        <span asp-validation-for="GroupId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="LessonId" class="form-label">Lesson</label>
        <select asp-items="ViewBag.Lessons" asp-for="LessonId" class="form-control" disabled>
            <option value="">Select a lesson</option>
        </select>
        <span asp-validation-for="LessonId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Deadline" class="form-label">Deadline</label>
        <input asp-for="Deadline" type="datetime-local" class="form-control" required />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-controller="GroupLessonDeadlines" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}