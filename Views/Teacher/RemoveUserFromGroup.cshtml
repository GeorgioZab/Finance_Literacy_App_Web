@model Finance_Literacy_App_Web.Models.User

@{
    ViewData["Title"] = "Удалить пользователя из группы";
}

<h1>Удалить пользователя из группы</h1>
<h3>Вы уверены, что хотите удалить @Model.UserName из группы?</h3>
<div>
    <form asp-action="RemoveUserFromGroup" method="post">
        <input type="hidden" name="id" value="@ViewBag.GroupId" />
        <input type="hidden" name="userId" value="@ViewBag.UserId" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Groups" asp-controller="Teacher" class="btn btn-secondary">Отмена</a>
    </form>
</div>