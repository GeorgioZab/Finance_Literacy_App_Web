@model Finance_Literacy_App_Web.Models.Group

@{
    ViewData["Title"] = "Delete Group";
}

<h1>Delete Group</h1>
<h3>Are you sure you want to delete this group?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Invite Code</dt>
        <dd class="col-sm-10">@(Model.InviteCode ?? "Not set")</dd>
        <dt class="col-sm-2">Users</dt>
        <dd class="col-sm-10">
            @if (Model.Users.Any())
            {
                <ul>
                    @foreach (var user in Model.Users)
                    {
                        <li>@user.UserName</li>
                    }
                </ul>
            }
            else
            {
                <p>No users in this group.</p>
            }
        </dd>
    </dl>
    <form asp-action="DeleteGroup" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Groups" asp-controller="Teacher" class="btn btn-secondary">Cancel</a>
    </form>
</div>