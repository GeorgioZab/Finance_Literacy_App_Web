@model Finance_Literacy_App_Web.Models.Group

@{
    ViewData["Title"] = "Удалить группу";
}

<h1>Удалить группу</h1>
<h3>Вы уверены, что хотите удалить эту группу?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Код приглашения</dt>
        <dd class="col-sm-10">@(Model.InviteCode ?? "Не установлен")</dd>
        <dt class="col-sm-2">Пользователи</dt>
        <dd class="col-sm-10">
            @if (Model.Users.Any())
            {
                <ul>
                    @foreach (var user in Model.Users)
                    {
                        <li>@user.UserName</li>
                    }
                </ul>
            }
            else
            {
                <p>В этой группе нет пользователей.</p>
            }
        </dd>
    </dl>
    <form asp-action="DeleteGroup" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Groups" asp-controller="Teacher" class="btn btn-secondary">Отмена</a>
    </form>
</div>