@model Finance_Literacy_App_Web.Models.Module

<h1>Удалить модуль</h1>
<h3>Вы уверены, что хотите удалить этот модуль?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Описание</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Отмена</a>
    </form>
</div>